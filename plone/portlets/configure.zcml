<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five">

    <!-- Global, but volatile and application-non-specific portlet storage.
         A local utility will probably override this to provide persistent
         portlet assignment.
      -->
      
    <utility factory=".storage.VolatilePortletStorage" />

</configure>
